@page "/study"
@using coaa_app.Data
@inject coaa_app.Services.FlashcardService FlashcardService

<div class="d-flex flex-column align-items-center mt-4 study-container">
    <h2 class="fw-bold text-primary mb-3 study-header">Week 1 Study</h2>

    @if (allCards == null)
    {
        <div>Loading...</div>
    }
    else if (filteredCards == null || filteredCards.Count == 0)
    {
        <div>No flashcards found.</div>
    }
    else
    {
        <div class="mb-2 text-center">
            <span class="badge bg-info text-dark fs-6">@CurrentActivityName</span>
        </div>
        <div class="mb-2">
            <span class="fw-bold">Card @(CurrentCardIndex + 1) of @TotalCards</span>
        </div>
        <div class="d-flex justify-content-center gap-2 mb-3 row study-selects">
            <select class="form-select w-auto col-3" @onchange="e => { selectedTag = e?.Value?.ToString() ?? string.Empty; ApplyFilter(); }">
                <option value="">All Tags</option>
                @foreach (var tag in allTags)
                {
                    <option value="@tag" selected="@(selectedTag == tag)">@tag</option>
                }
            </select>
            <select class="form-select w-auto col-9" @onchange="e => { selectedActivity = e?.Value?.ToString() ?? string.Empty; ApplyFilter(); }">
                <option value="">All Activities</option>
                @foreach (var act in allActivities)
                {
                    <option value="@act" selected="@(selectedActivity == act)">@act</option>
                }
            </select>
        </div>
        <div class="flashcard-anim mb-4"
             @onpointerdown="OnPointerDown"
             @onpointermove="OnPointerMove"
             @onpointerup="OnPointerUp"
             @ontouchstart:preventDefault
             @ontouchmove:preventDefault
             @ontouchend:preventDefault>
            <FlashcardView Card="CurrentCard" />
        </div>
        <div class="d-flex justify-content-center gap-3 mt-2 study-controls mobile-hide">
            <button class="btn btn-outline-secondary btn-lg" @onclick="PreviousCard" disabled="@(CurrentCardIndex == 0)">
                <i class="bi bi-arrow-left-circle"></i> Previous
            </button>
            <button class="btn btn-outline-success btn-lg" @onclick="NextCard" disabled="@(CurrentCardIndex == TotalCards - 1)">
                Next <i class="bi bi-arrow-right-circle"></i>
            </button>
            <button class="btn btn-outline-info btn-lg" @onclick="ShuffleCards">
                <i class="bi bi-shuffle"></i> Shuffle
            </button>
        </div>
        <div class="mobile-only mobile-side-container">
            <button class="mobile-side-toggle shadow-sm" @onclick="() => mobileSideVisible = !mobileSideVisible" title="Show/Hide Navigation" aria-label="Show or hide navigation">
                <span class="toggle-icon">@(mobileSideVisible ? "⮜" : "☰")</span>
            </button>
            <div class="mobile-side-buttons shadow-lg animate-slide" style="@(mobileSideVisible ? "max-height: 200px; opacity: 1; pointer-events: auto;" : "max-height: 0; opacity: 0; pointer-events: none;")">
                <button class="side-btn prev-btn" @onclick="PreviousCard" disabled="@(CurrentCardIndex == 0)" title="Previous Card">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="11" stroke="#0d6efd" stroke-width="2" fill="#e7f1ff"/><path d="M14.5 8l-4 4 4 4" stroke="#0d6efd" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </button>
                <button class="side-btn shuffle-btn" @onclick="ShuffleCards" title="Shuffle Cards">
                    <img src="shuffle.svg" style="height: 30px;"/>
                </button>
                <button class="side-btn next-btn" @onclick="NextCard" disabled="@(CurrentCardIndex == TotalCards - 1)" title="Next Card">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="11" stroke="#0d6efd" stroke-width="2" fill="#e7f1ff"/><path d="M9.5 8l4 4-4 4" stroke="#0d6efd" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </button>
            </div>
        </div>
    }
</div>

<style>
    .flashcard-anim {
        transition: transform 0.3s cubic-bezier(.68,-0.55,.27,1.55), box-shadow 0.3s;
        transform: scale(1.03);
    }
    .flashcard-anim:active {
        transform: scale(0.98);
    }
    /* ===== Side Button Container (Smaller) ===== */
    .mobile-side-buttons {
        display: flex;
        flex-direction: row;
        gap: 10px;
        margin-left: 10px;
        align-items: center;
        padding: 8px 12px;
        border-radius: 26px;
        background: linear-gradient( 180deg, rgba(255,255,255,0.92), rgba(255,255,255,0.85) );
        border: 1px solid rgba(255,255,255,0.7);
        backdrop-filter: blur(8px) saturate(1.2);
        -webkit-backdrop-filter: blur(8px) saturate(1.2);
        box-shadow: 0 6px 18px rgba(0,0,0,0.08), inset 0 1px 0 rgba(255,255,255,0.7);
        pointer-events: auto;
        opacity: 1;
        max-height: 160px;
        transition: max-height 0.35s ease, opacity 0.25s ease;
    }

    .animate-slide {
        overflow: hidden;
    }


    /* ===== Side Buttons (Smaller) ===== */
    .side-btn {
        background: linear-gradient(135deg, #f1f6ff 0%, #ffffff 100%);
        border: 1px solid rgba(13,110,253,0.18);
        border-radius: 16px;
        padding: 7px 12px;
        min-width: 70px;
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        letter-spacing: 0.01em;
        color: #0d6efd;
        outline: none;
        position: relative;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(13,110,253,0.12), inset 0 1px 0 rgba(255,255,255,0.9);
        transition: transform 0.14s ease, box-shadow 0.18s ease, background 0.2s ease, color 0.18s ease;
    }


        /* ===== Hover ===== */
        .side-btn:hover:not([disabled]) {
            transform: translateY(-1px);
            background: linear-gradient(135deg, #e6f0ff, #ffffff);
            box-shadow: 0 5px 14px rgba(13,110,253,0.16);
            color: #0a58ca;
            cursor: pointer;
        }


        /* ===== Active ===== */
        .side-btn:active {
            transform: scale(0.96);
            background: linear-gradient(135deg, #dce9ff, #f5f9ff);
            box-shadow: inset 0 2px 5px rgba(0,0,0,0.10);
        }


        /* ===== Focus ===== */
        .side-btn:focus-visible {
            outline: none;
            box-shadow: 0 0 0 2px rgba(13,110,253,0.25);
        }


        /* ===== Disabled ===== */
        .side-btn[disabled] {
            opacity: 0.5;
            filter: grayscale(0.25);
            background: #f3f4f6;
            color: #6c757d;
            box-shadow: none;
        }


        /* ===== Optional Shine (Subtle) ===== */
        .side-btn::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient( 120deg, transparent 35%, rgba(255,255,255,0.6), transparent 65% );
            opacity: 0;
            transition: opacity 0.25s ease;
        }

        .side-btn:hover::after {
            opacity: 0.35;
        }


    @@media (min-width: 768px) {
        .mobile-side-container, .mobile-only {
            display: none !important;
        }
    }
</style>

@code {
    private bool mobileSideVisible = false;
    private List<(FlashcardJsonItem Card, string ActivityName)> allCards = new();
    private List<(FlashcardJsonItem Card, string ActivityName)> filteredCards = new();
    private int CurrentCardIndex = 0;

    private string selectedTag = "";
    private string selectedActivity = "";
    private List<string> allTags = new();
    private List<string> allActivities = new();

    private FlashcardJsonItem? CurrentCard => filteredCards != null && filteredCards.Count > 0 ? filteredCards[CurrentCardIndex].Card : null;
    private string CurrentActivityName => filteredCards != null && filteredCards.Count > 0 ? filteredCards[CurrentCardIndex].ActivityName : "";
    private int TotalCards => filteredCards?.Count ?? 0;

    // For swipe detection
    private double? pointerDownX = null;
    private double? pointerCurrentX = null;
    private double swipeThreshold = 50; // px
    private bool isSwiping = false;

    private void OnPointerDown(Microsoft.AspNetCore.Components.Web.PointerEventArgs e)
    {
        pointerDownX = e.ClientX;
        pointerCurrentX = e.ClientX;
        isSwiping = true;
    }

    private void OnPointerMove(Microsoft.AspNetCore.Components.Web.PointerEventArgs e)
    {
        if (isSwiping && pointerDownX.HasValue)
        {
            pointerCurrentX = e.ClientX;
        }
    }

    private void OnPointerUp(Microsoft.AspNetCore.Components.Web.PointerEventArgs e)
    {
        if (isSwiping && pointerDownX.HasValue && pointerCurrentX.HasValue)
        {
            var deltaX = pointerCurrentX.Value - pointerDownX.Value;
            if (Math.Abs(deltaX) > swipeThreshold)
            {
                if (deltaX < 0)
                {
                    NextCard(); // Swipe left
                }
                else
                {
                    PreviousCard(); // Swipe right
                }
            }
        }
        pointerDownX = null;
        pointerCurrentX = null;
        isSwiping = false;
    }

    protected override async Task OnInitializedAsync()
    {
        var data = await FlashcardService.GetWeek1Async();
        allCards = new();
        allTags = new();
        allActivities = new();
        foreach (var activity in data.Flashcards)
        {
            if (!allActivities.Contains(activity.Activity))
                allActivities.Add(activity.Activity);
            foreach (var card in activity.Cards)
            {
                allCards.Add((card, activity.Activity));
                if (card.Tags != null)
                {
                    foreach (var tag in card.Tags)
                    {
                        if (!allTags.Contains(tag))
                            allTags.Add(tag);
                    }
                }
            }
        }
        filteredCards = new List<(FlashcardJsonItem Card, string ActivityName)>(allCards);
        CurrentCardIndex = 0;
    }

    private void ApplyFilter()
    {
        filteredCards = allCards
            .Where(c => (string.IsNullOrEmpty(selectedTag) || (c.Card.Tags != null && c.Card.Tags.Contains(selectedTag)))
                && (string.IsNullOrEmpty(selectedActivity) || c.ActivityName == selectedActivity))
            .ToList();
        CurrentCardIndex = 0;
        StateHasChanged();
    }

    private void NextCard()
    {
        if (CurrentCardIndex < TotalCards - 1)
        {
            CurrentCardIndex++;
        }
    }

    private void PreviousCard()
    {
        if (CurrentCardIndex > 0)
        {
            CurrentCardIndex--;
        }
    }

    private void ShuffleCards()
    {
        if (filteredCards == null || filteredCards.Count < 2)
            return;
        var rng = new Random();
        int n = filteredCards.Count;
        while (n > 1)
        {
            n--;
            int k = rng.Next(n + 1);
            var value = filteredCards[k];
            filteredCards[k] = filteredCards[n];
            filteredCards[n] = value;
        }
        CurrentCardIndex = 0;
        StateHasChanged();
    }
}
